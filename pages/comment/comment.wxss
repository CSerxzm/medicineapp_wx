.all{
  display: flex;
  min-height: 95%;
  flex-direction:column;
  align-items: center;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 50rpx;
}

.head{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
}

/* 图片 */
.image_head{
  width: 80rpx;
  height: 80rpx;
}

.nameandtime{
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
  padding: 2rpx;
}

.name {
  width: 500rpx;
  margin-left: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  overflow:hidden;
  text-overflow:ellipsis;
}

.time {
  font-size: 25rpx;
  padding-left: 30rpx;
  word-break: break-all;
  color: #7a7878;
}
/*分割线*/
.line{
 margin-top: 10rpx;
 background: #86ff9c;
 width:100%;
 height: 4rpx;
}

.content{
  width:100%;
  font-size: 32rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}
.comments{
  width:100%;
  display: flex;
  flex-direction:column;
  align-items: center;
}

 .breakup{
   display: flex;
   flex-direction: row;
   margin-top: 20rpx;
   margin-bottom: 20rpx;
   width: 100%;
 }

 .breakup_icon{
   width:10%;
   font-size: 32rpx;
   font-weight: bold;
 }

 .breakup_line{
    background: #86ff9c;
    width:90%;
    height: 4rpx;
    margin: auto 0rpx;
 }

 /*评论部分*/

.comment{
  font-size: 28rpx;
  padding:10px;
  margin-top: 10rpx;
  width:100%;
  border-radius: 5rpx;
  padding-bottom: 20rpx;
  border: 3rpx solid #E0E3DA;
}

.comment_content{
  width:100%;
  font-size: 28rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}

.image_content{
  width: 60rpx;
  height: 60rpx;
}

/*发布评论*/
.addcomment{
  width:100%;
  padding:10rpx;
  border-radius:5rpx;
  border:4rpx solid #cdcdcd;
  margin-top: 30rpx;
}


.addcomment_input{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
}

.butView{
  display: flex;
}

.btn1{
  padding:5rpx;
  background-color: #86ff9c;
}