/* pages/bodytest/bodytest.wxss */
.all {
  display: flex;
  flex-direction:column;
  border-radius: 20rpx;
  border: 3rpx solid #E0E3DA;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  margin: 30rpx;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 20rpx;
}

.question{
  float: left;
  font-size: 30rpx;
  font-weight: bold;
}

/* 单选钮样式 */
radio {
  transform:scale(0.65);
}

.radio{
  width: 100%;
  padding: 3rpx;
  display: block;
  font-size: 30rpx;
}

/*下标*/
.footer{
  margin:10rpx;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  font-size:35rpx;
  text-align:center;
  vertical-align:middle;
}

.btn{
  width:45% !important;
  background-color:#86ff9c;
  color:white;
  border-radius:5rpx;
  font-size:30rpx;
  display:inline-block;
  vertical-align:middle
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
  background: #86ff9c !important;
}